<InstrumentDefinition
  xmlns:vc="http://www.w3.org/2007/XMLSchema-versioning" 
  xsi:noNamespaceSchemaLocation="InstrumentDefinition.xsd" 
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  vc:minVersion="1.1">
  <Name>Generic Bearing Indicator</Name>
  <Type>3</Type>
  <Author>Dragonlaird</Author>
  <CreateDate>2021-01-27T06:45:00</CreateDate>
  <Aircraft>Generic</Aircraft>
  <AnimationUpdateInMs>50</AnimationUpdateInMs>
  <BackgroundImagePath>.\InstrumentImages\Bearing_Background.png</BackgroundImagePath>
  <Animations>
    <Animation type="0">
      <Name>Bearing</Name>
      <ImagePath>.\InstrumentImages\Bearing_Foreground.png</ImagePath>
      <Triggers>
        <Trigger type="1">
          <Name>Guage</Name>
          <Request>
            <Name>MAGNETIC COMPASS</Name>
            <Unit>degrees</Unit>
          </Request>
          <Actions>
            <Action type="0">
              <CentrePoint>
                <X>-50.0</X>
                <Y>50.0</Y>
              </CentrePoint>
              <RotateClockwise>false</RotateClockwise>
              <MaximumValueExpected>360.0</MaximumValueExpected>
              <MinimumValueExpected>0.0</MinimumValueExpected>
            </Action>
          </Actions>
        </Trigger>
      </Triggers>
    </Animation>
  </Animations>
</InstrumentDefinition>